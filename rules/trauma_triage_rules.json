{
  "rules": [
    {
      "rule_id": "hypotension_child",
      "description": "SBP below age-adjusted threshold suggests shock",
      "category": "hypotension",
      "thresholds": [
        {
          "age_min": 0,
          "age_max": 1,
          "sbp_min": 70,
          "note": "Infant threshold"
        },
        {
          "age_min": 1,
          "age_max": 10,
          "sbp_min": 70,
          "formula": "70 + 2*age",
          "note": "Pediatric age-adjusted formula"
        },
        {
          "age_min": 10,
          "age_max": 99,
          "sbp_min": 90,
          "note": "Adult threshold"
        }
      ],
      "signal_strength": "high",
      "overtriage_prone": false,
      "driver_name": "hypotension"
    },
    {
